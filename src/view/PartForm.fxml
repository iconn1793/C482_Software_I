<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PartFormController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="partFormTitle" text="Modify Part">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <RadioButton fx:id="inHouseRadioButton" mnemonicParsing="false" onAction="#onInHouseBtn" selected="true" text="In-House">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                     <toggleGroup>
                        <ToggleGroup fx:id="partToggleGroup" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="outsourcedRadioButton" mnemonicParsing="false" onAction="#onOutsourcedBtn" text="Outsourced" toggleGroup="$partToggleGroup">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </RadioButton>
               </children>
               <padding>
                  <Insets top="25.0" />
               </padding>
            </HBox>
            <GridPane vgap="5.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="130.0" minWidth="10.0" prefWidth="86.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="182.0" minWidth="10.0" prefWidth="119.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="185.0" minWidth="10.0" prefWidth="68.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="246.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="ID" />
                  <TextField fx:id="idTextField" GridPane.columnIndex="1" />
                  <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="inventoryTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="priceTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <Label text="Name" GridPane.rowIndex="1" />
                  <Label text="Inventory" GridPane.rowIndex="2" />
                  <Label text="Price/Cost" GridPane.rowIndex="3" />
                  <Label text="Max" GridPane.rowIndex="4" />
                  <Label fx:id="flexibleLabel" text="Machine ID" GridPane.rowIndex="5" />
                  <TextField fx:id="maxTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <TextField fx:id="flexibleTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <Label text="Min" GridPane.columnIndex="2" GridPane.rowIndex="4">
                     <GridPane.margin>
                        <Insets left="25.0" />
                     </GridPane.margin>
                  </Label>
                  <TextField fx:id="minTextField" GridPane.columnIndex="3" GridPane.rowIndex="4" />
               </children>
               <padding>
                  <Insets left="65.0" right="65.0" />
               </padding>
            </GridPane>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="saveButton" mnemonicParsing="false" onAction="#onSaveBtn" text="Save">
                     <HBox.margin>
                        <Insets right="25.0" />
                     </HBox.margin></Button>
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#onCancelBtn" text="Cancel">
                     <HBox.margin>
                        <Insets right="150.0" />
                     </HBox.margin></Button>
               </children></HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
