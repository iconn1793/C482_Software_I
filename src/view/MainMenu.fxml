<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <children>
      <GridPane layoutX="-1.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="50.0" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="500.0" minHeight="10.0" prefHeight="200.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Inventory Management System">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <GridPane.margin>
                  <Insets left="25.0" />
               </GridPane.margin>
            </Label>
            <Button fx:id="mainExitButton" mnemonicParsing="false" text="Exit" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
               <GridPane.margin>
                  <Insets right="75.0" />
               </GridPane.margin></Button>
            <VBox prefHeight="300.0" prefWidth="450.0" style="-fx-border-radius: 5; -fx-border-color: black;" GridPane.rowIndex="1">
               <children>
                  <StackPane prefHeight="34.0" prefWidth="300.0">
                     <children>
                        <Label text="Parts" StackPane.alignment="BOTTOM_LEFT">
                           <StackPane.margin>
                              <Insets left="10.0" />
                           </StackPane.margin>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="partSearchbar" maxWidth="-Infinity" prefHeight="27.0" prefWidth="225.0" promptText="Search by part ID or name" StackPane.alignment="BOTTOM_RIGHT">
                           <StackPane.margin>
                              <Insets right="20.0" />
                           </StackPane.margin>
                        </TextField>
                     </children>
                     <padding>
                        <Insets bottom="5.0" top="10.0" />
                     </padding>
                  </StackPane>
                  <TableView prefHeight="250.0" prefWidth="400.0">
                    <columns>
                      <TableColumn fx:id="partIdColumn" prefWidth="75.0" text="Part ID" />
                      <TableColumn fx:id="partNameColumn" prefWidth="100.0" text="Part Name" />
                        <TableColumn fx:id="partInventoryColumn" prefWidth="125.0" text="Inventory Level" />
                        <TableColumn fx:id="partPriceColumn" prefWidth="75.0" text="Price/Cost per Unit" />
                    </columns>
                  </TableView>
                  <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="300.0">
                     <children>
                        <Button fx:id="partAddButton" mnemonicParsing="false" text="Add">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="partModifyButton" mnemonicParsing="false" text="Modify">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="partDeleteButton" mnemonicParsing="false" text="Delete">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <GridPane.margin>
                  <Insets left="50.0" right="25.0" />
               </GridPane.margin></VBox>
            <VBox layoutX="60.0" layoutY="60.0" prefHeight="300.0" prefWidth="450.0" style="-fx-border-radius: 5; -fx-border-color: black;" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <StackPane prefHeight="34.0" prefWidth="300.0">
                     <children>
                        <Label text="Products" StackPane.alignment="BOTTOM_LEFT">
                           <StackPane.margin>
                              <Insets left="10.0" />
                           </StackPane.margin>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="productSearchbar" maxWidth="-Infinity" prefHeight="27.0" prefWidth="225.0" promptText="Search by product ID or name" StackPane.alignment="BOTTOM_RIGHT">
                           <StackPane.margin>
                              <Insets right="20.0" />
                           </StackPane.margin>
                        </TextField>
                     </children>
                     <padding>
                        <Insets bottom="5.0" top="10.0" />
                     </padding>
                  </StackPane>
                  <TableView prefHeight="250.0" prefWidth="400.0">
                     <columns>
                        <TableColumn fx:id="productIdColumn" prefWidth="75.0" text="Product ID" />
                        <TableColumn fx:id="productNameColumn" prefWidth="100.0" text="Product Name" />
                        <TableColumn fx:id="productInventoryColumn" prefWidth="125.0" text="Inventory Level" />
                        <TableColumn fx:id="productPriceColumn" prefWidth="75.0" text="Price/Cost per Unit" />
                     </columns>
                  </TableView>
                  <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="300.0">
                     <children>
                        <Button fx:id="productAddButton" mnemonicParsing="false" text="Add">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="productModifyButton" mnemonicParsing="false" text="Modify">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="productDeleteButton" mnemonicParsing="false" text="Delete">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <GridPane.margin>
                  <Insets left="25.0" right="50.0" />
               </GridPane.margin>
            </VBox>
         </children>
      </GridPane>
   </children>
</AnchorPane>
